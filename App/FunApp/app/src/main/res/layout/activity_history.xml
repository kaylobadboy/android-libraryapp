<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android         = "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation   = "vertical"
    android:visibility="visible"
    android:weightSum="1"
    tools:context="com.example.kaylo.funapp.MainActivity"
    android:id="@+id/search">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/purchasetable"
        android:longClickable="false"
        android:shrinkColumns="1"
        android:stretchColumns="2"></TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchases"
        android:id="@+id/Hist_Header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/TotalSpent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/purchasetable" />
</RelativeLayout>
